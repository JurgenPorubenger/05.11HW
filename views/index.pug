extends layout

block content
  h1= title
  p Welcome to #{title}
  .reg
    h1 Registration
    .inp
      input(type='text' placeholder='name' id='reg_name')
      input(type='text' placeholder='email' id='reg_email')
      input(type='text' placeholder='pwd' id='reg_pwd')
    .btn
      button(type='submit' id='reg_btn') Registrate
  .log
    h1 Login
    .inp
      input(type='text' placeholder='email' id='log_email')
      input(type='text' placeholder='pwd' id='log_pwd')
    .btn
      button(type='submit' id='log_btn') Login
  .log
    h1 Post
    .inp
      input(type='text' placeholder='title' id='post_title')
      input(type='text' placeholder='body' id='post_body')
    .btn
      button(type='submit' id='post_btn') Login
  script(src='./javascripts/main.js')
  script(src='./javascripts/main2.js')
  script(src='./javascripts/main3.js')
